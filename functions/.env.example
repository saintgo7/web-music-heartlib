# =============================================================================
# ABADA Music Studio - Cloudflare Workers Environment Variables
#
# This file contains all environment variables required for Cloudflare Workers.
# Copy this file to .env and fill in your values.
#
# IMPORTANT: Never commit .env file with actual values to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Cloudflare Account Configuration
# These values are required for deployment via Wrangler CLI
# -----------------------------------------------------------------------------

# Cloudflare Account ID (found in dashboard > Workers & Pages > Overview)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# Cloudflare API Token (generated from dashboard > Profile > API Tokens)
# Required permissions: Workers Scripts Edit, Workers KV Storage Edit, Pages Edit
CLOUDFLARE_API_TOKEN=your_api_token_here

# -----------------------------------------------------------------------------
# KV Namespace IDs
# Create namespaces using: wrangler kv:namespace create "NAMESPACE_NAME"
# -----------------------------------------------------------------------------

# STATS KV Namespace (for download statistics and analytics)
# Create: wrangler kv:namespace create "STATS"
KV_STATS_ID=your_stats_kv_namespace_id

# STATS KV Namespace (Preview/Development)
# Create: wrangler kv:namespace create "STATS" --preview
KV_STATS_PREVIEW_ID=your_stats_kv_preview_namespace_id

# GALLERY KV Namespace (for music gallery samples)
# Create: wrangler kv:namespace create "GALLERY"
KV_GALLERY_ID=your_gallery_kv_namespace_id

# GALLERY KV Namespace (Preview/Development)
# Create: wrangler kv:namespace create "GALLERY" --preview
KV_GALLERY_PREVIEW_ID=your_gallery_kv_preview_namespace_id

# -----------------------------------------------------------------------------
# Application Configuration
# Public variables (can be included in client-side code)
# -----------------------------------------------------------------------------

# Application environment (development, staging, production)
ENVIRONMENT=production

# Application name
APP_NAME=ABADA Music Studio

# Website URL (your custom domain or Pages URL)
WEBSITE_URL=https://music.abada.kr

# GitHub Releases URL (for download redirects)
GITHUB_RELEASES_URL=https://github.com/saintgo7/web-music-heartlib/releases

# API Base URL (if using custom routes)
API_BASE_URL=https://music.abada.kr/api

# -----------------------------------------------------------------------------
# Secrets (Sensitive - set via wrangler secret put)
# These should NOT be stored in this file, use wrangler secret put instead
# -----------------------------------------------------------------------------

# Admin API Key for protected endpoints (gallery management, etc.)
# Set using: wrangler secret put ADMIN_API_KEY
# ADMIN_API_KEY=your_secure_admin_key_here

# Rate limiting configuration (optional)
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_SECONDS=60

# -----------------------------------------------------------------------------
# Optional: External Service Integrations
# -----------------------------------------------------------------------------

# Google Analytics (optional)
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry Error Tracking (optional)
# SENTRY_DSN=https://xxx@sentry.io/xxx

# Discord Webhook (optional - for notifications)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/xxx

# -----------------------------------------------------------------------------
# Development/Testing Configuration
# -----------------------------------------------------------------------------

# Enable debug mode (development only)
DEBUG_MODE=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Allow CORS from all origins (true for development, false for production)
CORS_ALLOW_ALL=true

# -----------------------------------------------------------------------------
# Notes
# -----------------------------------------------------------------------------
#
# 1. KV Namespace IDs:
#    After creating KV namespaces, copy the IDs to wrangler.toml:
#
#    [[kv_namespaces]]
#    binding = "STATS"
#    id = "YOUR_STATS_KV_ID"
#    preview_id = "YOUR_STATS_KV_PREVIEW_ID"
#
# 2. Secrets:
#    For sensitive values, use wrangler secret:
#
#    wrangler secret put ADMIN_API_KEY
#    (Enter value when prompted)
#
# 3. Environment-specific variables:
#    Define in wrangler.toml under [env.xxx] sections:
#
#    [env.development]
#    vars = { ENVIRONMENT = "development", DEBUG_MODE = "true" }
#
#    [env.production]
#    vars = { ENVIRONMENT = "production", DEBUG_MODE = "false" }
#
# =============================================================================
